        // Funcionalidad del chatbot
        document.addEventListener('DOMContentLoaded', function() {
            const chatbotToggle = document.getElementById('chatbotToggle');
            const chatbotWindow = document.getElementById('chatbotWindow');
            const chatbotClose = document.getElementById('chatbotClose');
            const chatbotMessages = document.getElementById('chatbotMessages');
            const chatbotInput = document.getElementById('chatbotInput');
            const chatbotSend = document.getElementById('chatbotSend');
            
            // Mostrar mensaje de bienvenida
            setTimeout(() => {
                addBotMessage("¬°Hola! Soy Yoltla, tu asistente virtual especializado en plantas medicinales. ¬øEn qu√© puedo ayudarte hoy?");
                addQuickReplies([
                    "Plantas para dolor",
                    "Remedios digestivos", 
                    "Ayuda para estr√©s",
                    "Ubicaci√≥n de Zacapoaxtla"
                ]);
            }, 1000);
            
            // Abrir/cerrar chatbot
            chatbotToggle.addEventListener('click', () => {
                chatbotWindow.classList.toggle('active');
            });
            
            chatbotClose.addEventListener('click', () => {
                chatbotWindow.classList.remove('active');
            });
            
            // Enviar mensaje al presionar Enter
            chatbotInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
            
            // Enviar mensaje al hacer clic en el bot√≥n
            chatbotSend.addEventListener('click', sendMessage);
            
            function sendMessage() {
                const message = chatbotInput.value.trim();
                if (message) {
                    addUserMessage(message);
                    chatbotInput.value = '';
                    
                    // Simular "escribiendo..."
                    showTypingIndicator();
                    
                    // Respuesta del bot despu√©s de un breve retraso
                    setTimeout(() => {
                        removeTypingIndicator();
                        const response = getBotResponse(message);
                        addBotMessage(response);
                        
                        // Agregar respuestas r√°pidas despu√©s de ciertos tipos de mensajes
                        if (message.toLowerCase().includes('hola') || message.toLowerCase().includes('buenos')) {
                            addQuickReplies([
                                "Plantas para dolor",
                                "Remedios digestivos", 
                                "Ayuda para estr√©s"
                            ]);
                        }
                    }, 1500);
                }
            }
            
            function addUserMessage(text) {
                const messageElement = document.createElement('div');
                messageElement.className = 'message user-message';
                messageElement.textContent = text;
                chatbotMessages.appendChild(messageElement);
                scrollToBottom();
            }
            
            function addBotMessage(text) {
                const messageElement = document.createElement('div');
                messageElement.className = 'message bot-message';
                messageElement.innerHTML = text;
                chatbotMessages.appendChild(messageElement);
                scrollToBottom();
            }
            
            function addQuickReplies(replies) {
                const quickRepliesContainer = document.createElement('div');
                quickRepliesContainer.className = 'quick-replies';
                
                replies.forEach(reply => {
                    const quickReply = document.createElement('div');
                    quickReply.className = 'quick-reply';
                    quickReply.textContent = reply;
                    quickReply.addEventListener('click', () => {
                        addUserMessage(reply);
                        showTypingIndicator();
                        
                        setTimeout(() => {
                            removeTypingIndicator();
                            const response = getBotResponse(reply);
                            addBotMessage(response);
                        }, 1000);
                    });
                    
                    quickRepliesContainer.appendChild(quickReply);
                });
                
                chatbotMessages.appendChild(quickRepliesContainer);
                scrollToBottom();
            }
            
            function showTypingIndicator() {
                const typingElement = document.createElement('div');
                typingElement.className = 'typing-indicator';
                typingElement.id = 'typingIndicator';
                typingElement.innerHTML = `
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                `;
                chatbotMessages.appendChild(typingElement);
                scrollToBottom();
            }
            
            function removeTypingIndicator() {
                const typingIndicator = document.getElementById('typingIndicator');
                if (typingIndicator) {
                    typingIndicator.remove();
                }
            }
            
            function scrollToBottom() {
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }
            
            function getBotResponse(message) {
                const lowerMessage = message.toLowerCase();
                
                // Buscar coincidencia en los patrones
                for (const [category, data] of Object.entries(chatbotKnowledge)) {
                    if (category === 'default') continue;
                    
                    for (const pattern of data.patterns) {
                        if (lowerMessage.includes(pattern)) {
                            const responses = data.responses;
                            return responses[Math.floor(Math.random() * responses.length)];
                        }
                    }
                }
                
                // Respuesta por defecto
                const defaultResponses = chatbotKnowledge.default.responses;
                return defaultResponses[Math.floor(Math.random() * defaultResponses.length)];
            }

            // Inicializar la p√°gina
            showHomePage();
        });

        // Funciones de navegaci√≥n CORREGIDAS
        function showHomePage(event) {
            if (event) event.preventDefault();
            hideAllPages();
            document.getElementById('home-page').style.display = 'block';
            previousPage = currentPage;
            currentPage = 'home-page';
        }

        function showLocationPage(event) {
            if (event) event.preventDefault();
            hideAllPages();
            document.getElementById('location-page').style.display = 'block';
            previousPage = currentPage;
            currentPage = 'location-page';
        }

        function showContactPage(event) {
            if (event) event.preventDefault();
            hideAllPages();
            document.getElementById('contact-page').style.display = 'block';
            previousPage = currentPage;
            currentPage = 'contact-page';
        }

        function showAboutPage(event) {
            if (event) event.preventDefault();
            hideAllPages();
            document.getElementById('about-page').style.display = 'block';
            previousPage = currentPage;
            currentPage = 'about-page';
        }

        function hideAllPages() {
            const pages = [
                'home-page', 'location-page', 'contact-page', 'about-page',
                'stress-page', 'digestion-page', 'fever-page', 'pain-page'
            ];
            
            // Ocultar todas las p√°ginas principales
            pages.forEach(page => {
                const element = document.getElementById(page);
                if (element) {
                    element.style.display = 'none';
                }
            });
            
            // Tambi√©n ocultar todas las p√°ginas de plantas creadas din√°micamente
            const plantPages = document.querySelectorAll('.plant-detail-page');
            plantPages.forEach(page => {
                page.style.display = 'none';
            });
        }

        function showConditionPage(condition) {
            hideAllPages();
            const page = document.getElementById(`${condition}-page`);
            if (page) {
                page.style.display = 'block';
                previousPage = currentPage;
                currentPage = `${condition}-page`;
            }
        }

        // NUEVA FUNCI√ìN: Regresar a la p√°gina anterior
        function returnToPreviousPage() {
            if (previousPage && previousPage !== currentPage) {
                // Regresar a la p√°gina anterior
                hideAllPages();
                
                // Buscar la p√°gina anterior
                if (previousPage === 'home-page') {
                    showHomePage();
                } else if (previousPage === 'location-page') {
                    showLocationPage();
                } else if (previousPage === 'contact-page') {
                    showContactPage();
                } else if (previousPage === 'about-page') {
                    showAboutPage();
                } else if (previousPage.includes('-page')) {
                    // Para p√°ginas de condici√≥n
                    const condition = previousPage.replace('-page', '');
                    showConditionPage(condition);
                } else {
                    // Si no se encuentra, mostrar p√°gina de inicio
                    showHomePage();
                }
            } else {
                // Si no hay p√°gina anterior, ir al inicio
                showHomePage();
            }
        }

        function showPlantPage(plantId) {
            // Guardar la p√°gina actual como anterior antes de cambiar
            previousPage = currentPage;
            currentPage = `${plantId}-page`;
            
            // Primero ocultar todas las p√°ginas
            hideAllPages();
            
            // Verificar si tenemos datos para esta planta
            const planta = plantasData[plantId];
            if (!planta) {
                showHomePage();
                alert(`Informaci√≥n para esta planta estar√° disponible pronto.`);
                return;
            }
            
            // Verificar si la p√°gina ya existe
            let page = document.getElementById(`${plantId}-page`);
            
            if (!page) {
                // Crear la p√°gina din√°micamente
                page = document.createElement('section');
                page.id = `${plantId}-page`;
                page.className = 'plant-detail-page';
                
                // Determinar qu√© imagen usar
                let imagen = '';
                switch(plantId) {
                    case 'epazote': imagen = 'Epazote.png'; break;
                    case 'hierbabuena': imagen = 'Hierbabuena.png'; break;
                    case 'lavanda': imagen = 'Lavanda.jpg'; break;
                    case 'manzanilla': imagen = 'Manzanilla.png'; break;
                    case 'sabila': imagen = 'Sabila.png'; break;
                    case 'bugambilia': imagen = 'Bugambilia.png'; break;
                    case 'eucalipto': imagen = 'Eucalipto.png'; break;
                    case 'geranio': imagen = 'Geranio.png'; break;
                    case 'ruda': imagen = 'Ruda.png'; break;
                    case 'toronjil_rojo': imagen = 'Toronjil rojo.png'; break;
                    case 'ajo': imagen = 'Ajo.png'; break;
                    case 'albahaca': imagen = 'Albahaca.jpg'; break;
                    case 'arnica': imagen = 'Arnica.png'; break;
                    case 'cempasuchil': imagen = 'Cempasuchil.png'; break;
                    case 'cola_caballo': imagen = 'Cola de Caballo.jpg'; break;
                    case 'guayaba': imagen = 'Guayaba.png'; break;
                    case 'malva': imagen = 'Malva.jpg'; break;
                    case 'sauco': imagen = 'Sa√∫co.png'; break;
                    case 'zacate_limon': imagen = 'Zacate Limon.jpg'; break;
                    default: imagen = 'Manzanilla.png'; // Imagen por defecto
                }
                
                // Crear el contenido de la p√°gina
                page.innerHTML = `
                    <div class="plant-detail-header">
                        <div class="container">
                            <h1>${planta.nombre}</h1>
                            <p>${planta.nombreCientifico} - Planta medicinal de Zacapoaxtla</p>
                            <!-- BOTONES MEJORADOS: Volver al inicio y Regresar -->
                            <button class="back-btn" onclick="showHomePage(event)">Volver al Inicio</button>
                            <button class="return-btn" onclick="returnToPreviousPage()">Regresar</button>
                        </div>
                    </div>
                    
                    <div class="container">
                        <div class="plant-detail-content">
                            <div class="plant-detail-image" style="background-image: url('${imagen}'); background-color: #e8f5e8;"></div>
                            
                            <div class="plant-detail-info">
                                <div class="info-section">
                                    <h3>üåø Informaci√≥n General</h3>
                                    <p><strong>Nombre cient√≠fico:</strong> ${planta.nombreCientifico}</p>
                                    <p><strong>Familia:</strong> ${planta.familia}</p>
                                    <p><strong>Partes utilizadas:</strong> ${planta.partesUtilizadas}</p>
                                    <p><strong>Ubicaci√≥n en Zacapoaxtla:</strong> ${planta.ubicacion}</p>
                                </div>
                                
                                <div class="info-section">
                                    <h3>üíä Usos Medicinales</h3>
                                    <p>${planta.usosMedicinales}</p>
                                </div>
                                
                                <div class="info-section">
                                    <h3>üß™ Propiedades</h3>
                                    <p>${planta.propiedades}</p>
                                </div>
                                
                                <div class="precaution-card">
                                    <h4>‚ö†Ô∏è Precauciones</h4>
                                    <p>Consulta con un especialista antes de usar esta planta medicinal, especialmente si est√°s embarazada, amamantando, tomando medicamentos o tienes condiciones m√©dicas preexistentes.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="plant-detail-footer">
                            <p><strong>Conocimiento tradicional de Zacapoaxtla:</strong> Esta planta forma parte del patrimonio herbal de nuestra regi√≥n y ha sido utilizada por generaciones para el bienestar de la comunidad.</p>
                        </div>
                    </div>
                `;
                
                // Agregar la p√°gina al documento
                document.body.appendChild(page);
            }
            
            // Mostrar la p√°gina
            page.style.display = 'block';
        }
    </script>
</body>

